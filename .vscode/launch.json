    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug express server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": ["--inspect"],
            "restart": true,
            "sourceMaps": true,
            "smartStep": true,
            "program": "${workspaceFolder}/dist/index.js",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"]
        }
    ]
}